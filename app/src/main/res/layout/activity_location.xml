<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#00FFF0"
    android:layout_height="match_parent"
    tools:context="com.chandramani.alien.helpme.LocationActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pagetext"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:text="The content of you message is shown below. Press send button to send message"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FF0000"
        android:text="Latitude:"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FF0000"
        android:id="@+id/testlatitude"
        android:textSize="20sp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF0000"
            android:text="Longitude:"
            android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testlongitude"
        android:textColor="#FF0000"
        android:layout_weight="1"
        android:textSize="20sp"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="write your message here..."
        android:textColorHint="#000000"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:lines="3"
        android:id="@+id/user_message"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendbtn"
        android:textSize="30sp"
        android:padding="20dp"
        android:text="SEND"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#00FF00"
        android:onClick="onclicksendbtn"
        android:background="#FF0000"/>


</LinearLayout>
